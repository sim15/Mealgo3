<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.ChooseActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMenu2"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginBottom="920dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonskip2"
        android:layout_width="104dp"
        android:layout_height="93dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="42dp"
        android:text="@string/buttonskip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/submitButton2"
        android:layout_width="232dp"
        android:layout_height="113dp"
        android:layout_marginBottom="84dp"
        android:text="@string/submitButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RatingBar
        android:id="@+id/simpleRatingBar2"
        android:layout_width="241dp"
        android:layout_height="75dp"
        android:layout_marginBottom="260dp"
        android:contentDescription="@string/simpleRatingBar"
        android:numStars="5"
        android:progressTint="#FFEB3B"
        android:rating="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/food2"
        android:layout_width="501dp"
        android:layout_height="85dp"
        android:layout_marginTop="460dp"
        android:layout_marginBottom="100dp"
        android:text="@string/food"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@id/simpleRatingBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>