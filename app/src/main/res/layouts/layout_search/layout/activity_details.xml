<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/_12sdp"
        android:contentDescription="@string/recipe_image_display"
        android:src="@drawable/ic_baseline_crop_original_24" />


    <TextView
        android:id="@+id/recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeImage"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-37dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-37dp"
        android:background="@color/cardview_light_background"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/_30sdp"
        tools:text="This is some temp text" />


    <TextView
        android:id="@+id/ingredientTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeName"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@color/cardview_shadow_end_color"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/_20sdp"
        tools:text="Ingredients" />

    <ListView
        android:id="@+id/ingredientList"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientTitle"
        android:divider="@color/cardview_dark_background"
        />


</RelativeLayout>


